#!/bin/sh

normal_bg="#282828E1"
normal_fg="#ebdbb2E1"
selected_bg="#98971aE1"
selected_fg="#ebdbb2E1"
out_bg="#98971aE1"
out_fg="#ebdbb2E1"

bemenu-run \
  -p "ÈÅ∏" \
  -c \
  -l 10 \
  -W 0.25 \
  -w \
  -R 1 \
  --binding vim \
  --fn "JetBrainsMono NerdFont 14" \
  --tb "$normal_bg" \
  --tf "$normal_fg" \
  --fb "$normal_bg" \
  --ff "$selected_fg" \
  --cb "$selected_fg" \
  --cf "$normal_bg" \
  --nb "$normal_bg" \
  --nf "$normal_fg" \
  --hb "$out_bg" \
  --hf "$normal_fg" \
  --fbb "$out_fg" \
  --fbf "$normal_bg" \
  --sb "$selected_bg" \
  --sf "$selected_fg" \
  --ab "$normal_bg" \
  --af "$normal_fg"

