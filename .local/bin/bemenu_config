#!/bin/sh

normal_bg="1e1e2eE1"
normal_fg="#CDD6F4E1"
selected_bg="#1E1E2EE1"
selected_fg="#BAC2DEE1"
out_bg="#1E1E2EE1"
out_fg="#F38BA8E1"

bemenu \
  -p "ÈÅ∏" \
  -c \
  -l 10 \
  -W 0.25 \
  -w \
  -R 1 \
  --fn "JetBrainsMono NerdFont 14" \
  --tb "$normal_bg" \
  --tf "$normal_fg" \
  --fb "$normal_bg" \
  --ff "$selected_fg" \
  --cb "$selected_fg" \
  --cf "$normal_bg" \
  --nb "$normal_bg" \
  --nf "$normal_fg" \
  --hb "$out_bg" \
  --hf "$normal_fg" \
  --fbb "$out_fg" \
  --fbf "$normal_bg" \
  --sb "$selected_bg" \
  --sf "$selected_fg" \
  --ab "$normal_bg" \
  --af "$normal_fg"
